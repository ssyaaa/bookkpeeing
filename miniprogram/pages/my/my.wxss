.my-box{
  height: 160rpx;
  background-color: #FEDB5B;
  padding: 40rpx 0;
}

.my-info{
  height: 160rpx;
  padding: 0 40rpx;
}

.my-img{
  width: 160rpx;
  height: 160rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
  position: relative;
  color: #6a6a6a;
  overflow: hidden;
  box-shadow: 0 0 0 10rpx rgba(255, 255, 255, .4);
}

.open-btn{
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  left: 0;
  top: 0;
  padding: 0;
  opacity: 0;
  border-radius: 50%;
}

.nickname{
  line-height: 160rpx;
  color: #444;
  font-size: 32rpx;
  margin-left: 40rpx;
}

.list{
  margin-top: 20rpx;
  background-color: #fff;
}

.list-item{
  padding: 20rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.list-item:last-child{
  margin-bottom: 0;
}

.title{
  font-size: 32rpx;
  color: #6a6a6a;
  line-height: 80rpx;
}

.arrow{
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
}
.arrow-img{
  height: 40rpx;
}

.my-text{
  line-height: 160rpx;
  text-align: center;
  font-size: 24rpx;
}

button:not([size='mini']){
  width: 100%;
}